{
  "name": "jenkins-api",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:kunyan/jenkins-api.git",
  "author": "Kun Yan <kyan@redhat.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "tslint src/**/*.ts"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^24.0.0",
    "coveralls": "^3.0.2",
    "husky": "^1.3.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "rollup": "^1.1.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "rollup-plugin-uglify": "^6.0.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,md,html,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/test/setupTests.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/test"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
